@import "../../../../node_modules/ng2-datetime/src/vendor/bootstrap-datepicker/bootstrap-datepicker3.min";
@import "../../../../node_modules/ng2-datetime/src/vendor/bootstrap-timepicker/bootstrap-timepicker.min";
@import "../../scss/variables";
@import "../../../../node_modules/bootstrap/scss/_variables";
@import "../../../../node_modules/bootstrap/scss/mixins";

@import "../../../../node_modules/bootstrap-application-wizard/src/bootstrap-wizard";


/**************************************
/**  PopOver - Mensajes Validaciones
***************************************/

.popover {
  background-color: #e79693;
}

.popover::after {
  border-width: inherit;
}

.popover-content {
  color: darkred;
  font-weight: bold;
  padding: 9px 14px;
}

/***********************************/
/**            PARSLEY            **/
/***********************************/


input.parsley-error{
  border-color: $brand-danger;
  @include box-shadow(inset 0 1px 1px rgba($brand-danger,.075));
}

.parsley-errors-list{
  font-size: $font-size-smaller;
  padding-left: 0;
  margin-bottom: 5px;

  li{
    list-style: none;
    color: $brand-danger;
  }
}

p.parsley-error {
  color: #B94A48;
  background-color: #F2DEDE;
  border: 1px solid #EED3D7;
}
/* ******************************************* */
.form-group {
  margin-left: 10%;
  width: 80%;
  padding-left: 0px;
}

.btn-success {
  background-color: darkgreen;
}

/**
* datetime
**/
.input-group {
  width: auto;
  .input-group-addon {
    padding: .375rem .75rem .375rem .75rem;
  }
}

.fileinput .input-group-addon {
  border-right: 1px solid $btn-secondary-border;
}

